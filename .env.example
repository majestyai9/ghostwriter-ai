# Example environment configuration for Ghostwriter AI
# Copy this file to .env and fill in your API keys

# LLM Provider Selection (openai, anthropic, cohere, gemini, openrouter)
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo
# For Azure OpenAI:
# OPENAI_API_TYPE=azure
# OPENAI_API_BASE=https://your-resource.openai.azure.com/
# OPENAI_API_VERSION=2023-05-15
# OPENAI_ENGINE=your-deployment-name

# Anthropic Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-opus-4.1-20250805

# Cohere Configuration
COHERE_API_KEY=your_cohere_api_key_here
COHERE_MODEL=command-r-plus

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-pro

# OpenRouter Configuration (access multiple models)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-opus-4.1
OPENROUTER_SITE_URL=https://github.com/ghostwriter-ai
OPENROUTER_SITE_NAME=GhostWriter AI

# Generation Parameters
TEMPERATURE=0.2
TOKEN_LIMIT=4096
MAX_TOKENS=1024
MAX_TOKENS_SHORT=256

# Book Configuration
BOOK_LANGUAGE=English
BOOK_TITLE=My Amazing Book
BOOK_INSTRUCTIONS=Write a comprehensive book about artificial intelligence

# Progress Tracking
ENABLE_PROGRESS_TRACKING=true
# Optional webhook for progress updates
# PROGRESS_CALLBACK_URL=https://your-webhook.com/progress